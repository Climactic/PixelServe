{
  "name": "dark",
  "description": "Sleek dark mode design with centered content",
  "layout": {
    "backgroundColor": "#020617",
    "padding": 80,
    "direction": "column",
    "align": "center",
    "justify": "center",
    "elements": [
      {
        "type": "image",
        "src": "{{logo}}",
        "width": 72,
        "height": 72,
        "borderRadius": 16,
        "showIf": "logo"
      },
      {
        "type": "spacer",
        "size": 36,
        "showIf": "logo"
      },
      {
        "type": "text",
        "content": "{{title}}",
        "fontSize": 60,
        "fontWeight": 700,
        "color": "#{{fg}}",
        "lineHeight": 1.2,
        "maxWidth": 900
      },
      {
        "type": "spacer",
        "size": 24,
        "showIf": "description"
      },
      {
        "type": "text",
        "content": "{{description}}",
        "fontSize": 28,
        "fontWeight": 400,
        "color": "#94a3b8",
        "lineHeight": 1.5,
        "maxWidth": 800,
        "showIf": "description"
      }
    ]
  }
}
